    // scanHTML: false, 
    // importStyles: ["https://fonts.googleapis.com/icon?family=Material+Icons","https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css"],
    // cssStyle: '', 
    // hidePageRule: true
    // });
